<main class="business-landing-main">
  <div class="business-landing-main-content">
    <%- include('../../components/business-landing-page/mini-text', { text: data.miniText.value, id: data.miniText.id }) %>

    <h1 contenteditable="true" id="<%= data.heading.id %>" class="editable business-landing-heading">
      <%= data.heading.value %>
    </h1>
    <p contenteditable="true" id="<%= data.paragraph.id %>" class="editable business-landing-paragraph">
      <%= data.paragraph.value %>
    </p>

    <button class="business-landing-button">
      <%= data.buttonText.value %>
    </button>
  </div>
  <img src="<%= data.mainImage.value %>" alt="main image" class="business-landing-main-image">
</main>
