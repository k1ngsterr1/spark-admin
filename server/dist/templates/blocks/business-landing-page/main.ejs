<main class="business-landing-main">
  <div class="business-landing-main-content">
    <%- include('../../components/business-landing-page/mini-text', { text: main.miniText.value, id: main.miniText.id }) %>

    <h1 contenteditable="true" id="<%= main.heading.id %>" class="editable business-landing-heading">
      <%= main.heading.value %>
    </h1>
    <p contenteditable="true" id="<%= main.paragraph.id %>" class="editable business-landing-paragraph">
      <%= main.paragraph.value %>
    </p>

    <button class="business-landing-button">
      <%= main.buttonText.value %>
    </button>
  </div>
  <img src="<%= main.mainImage.value %>" alt="main image" class="business-landing-main-image">
</main>
